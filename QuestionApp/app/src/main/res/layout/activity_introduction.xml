<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#f9f8e9"
    tools:context="questionapp.frank.fca.com.questionapp.IntroductionActivity">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:src="@drawable/film"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Cinema"
        android:layout_marginTop="190dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginLeft="45dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questionnaire App!"
        android:layout_marginTop="215dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginLeft="70dp"/>


    <Button
        android:id="@+id/btnPlay"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="115dp"
        android:text="Play" />

    <Button
        android:id="@+id/btnMoreQuestions"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="115dp"
        android:text="More Questions" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="115dp"
        android:text="About" />

</RelativeLayout>
